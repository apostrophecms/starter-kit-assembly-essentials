{
  "name": "a3-assembly-boilerplate",
  "version": "1.2.0",
  "description": "A boilerplate for multisite content-management in A3",
  "private": true,
  "nodemonConfig": {
    "delay": 1000,
    "verbose": true,
    "watch": [
      "./app.js",
      "./modules/**/*",
      "./lib/**/*.js",
      "./views/**/*.html"
    ]
  },
  "scripts": {
    "build": "APOS_UPLOADFS_ASSETS=1 NODE_ENV=production bash -c 'node app @apostrophecms/asset:build --site=dashboard && ./scripts/for-each-theme @apostrophecms/asset:build'",
    "start": "APOS_UPLOADFS_ASSETS=1 NODE_ENV=production node app",
    "dev": "(ENV=dev nodemon --delay 1000ms -x \"node app.js\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apostrophecms/a3-assembly-boilerplate"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "author": "Apostrophe Technologies",
  "license": "UNLICENSED",
  "dependencies": {
    "@apostrophecms-pro/basics": "git+ssh://git@github.com/apostrophecms/basics",
    "@apostrophecms-pro/multisite": "git+ssh://git@github.com/apostrophecms/multisite",
    "@apostrophecms-pro/palette": "git+ssh://git@github.com/apostrophecms/palette",
    "apostrophe": "github:apostrophecms/apostrophe",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.7",
    "qs": "^6.9.6",
    "require-all": "^3.0.0"
  },
  "devDependencies": {
    "stylelint-config-punkave": "^1.1.3"
  }
}
