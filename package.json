{
  "name": "a3-assembly-boilerplate",
  "version": "1.1.0",
  "description": "A boilerplate for multisite content-management in A3",
  "private": true,
  "scripts": {
    "build": "APOS_UPLOADFS_ASSETS=1 NODE_ENV=production bash -c 'node app @apostrophecms/asset:build --site=dashboard && ./scripts/for-each-theme @apostrophecms/asset:build'",
    "//": "because nodemon insists on executing 'start' if it exists, we must distinguish production",
    "production-start": "APOS_UPLOADFS_ASSETS=1 NODE_ENV=production npm run start",
    "start": "node app",
    "dev": "nodemon",
    "test": "eslint . && stylelint 'dashboard/**/*.scss' && stylelint 'sites/**/*.scss'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apostrophecms/a3-assembly-boilerplate"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "author": "Apostrophe Technologies",
  "license": "UNLICENSED",
  "dependencies": {
    "@apostrophecms-pro/basics": "^1.3.0",
    "@apostrophecms-pro/document-versions": "^1.0.1",
    "@apostrophecms-pro/multisite": "^3.8.0",
    "@apostrophecms-pro/palette": "^3.0.2",
    "@opentelemetry/auto-instrumentations-node": "^0.27.4",
    "@opentelemetry/exporter-jaeger": "^1.2.0",
    "@opentelemetry/sdk-node": "^0.27.0",
    "@opentelemetry/semantic-conventions": "^1.2.0",
    "apostrophe": "github:apostrophecms/apostrophe#pro-4227-pnpm-build",
    "node-fetch": "^2.6.5",
    "nodemon": "^2.0.16",
    "qs": "^6.9.6",
    "require-all": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^7.25.0",
    "eslint-config-apostrophe": "^3.4.2",
    "stylelint": "^13.13.1",
    "stylelint-config-apostrophe": "^1.1.0"
  }
}
